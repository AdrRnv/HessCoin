{% extends 'adminbase.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 mt-8">
        <h1 class="text-3xl font-bold text-center text-gray-700">Liste des Catégories</h1>
        <div class="mt-6">
            {% if categories is not empty %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for category in categories %}
                        <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition duration-300">
                            <div class="flex justify-between items-center p-4">
                                <h2 class="text-xl font-semibold text-gray-800">{{ category.name }}</h2>
                                <a href="{{ path('app_category_delete', {'id': category.id}) }}"
                                   class="text-red-500 hover:text-red-700">
                                    <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-center text-gray-500 mt-4">Aucune catégorie trouvée.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
