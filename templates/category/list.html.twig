{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 mt-8">
        <h1 class="text-3xl font-bold text-center text-gray-700">Liste des Catégories</h1>
        <div class="mt-6">
            {% if categories is not empty %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for category in categories %}
                        <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition duration-300">
                            {% if category.imageName %}
                                <img src="{{ asset('uploads/category_images/' ~ category.imageName) }}"
                                     alt="{{ category.name }}"
                                     class="w-full h-40 object-cover rounded-t-lg">
                            {% endif %}
                            <div class="p-4">
                                <h2 class="text-xl font-semibold text-gray-800">{{ category.name }}</h2>
                                <a href="#" class="mt-4 inline-block text-blue-600 hover:text-blue-500">Voir plus</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-center text-gray-500 mt-4">Aucune catégorie trouvée.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
